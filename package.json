{
  "name": "zekr",
  "version": "0.1.0",
  "description": "A simple test framework for ReScript",
  "main": "./src/Zekr.js",
  "module": "./src/Zekr.js",
  "files": [
    "src/**/*.res",
    "src/**/*.js",
    "rescript.json"
